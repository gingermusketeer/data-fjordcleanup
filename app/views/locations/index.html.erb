<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mx-auto max-w-m">
  <h1 class="text-2xl font-bold mb-4">Locations
    <%= link_to 'Create location', new_location_url, class: "h-6 px-3 py-1 m-1 text-xs text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800" %>
  </h1>
  <table class="text-left w-full border-collapse">
    <thead>
      <td class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Name</td>
      <td class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Tag</td>
      <td class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light"></td>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr class="hover:bg-grey-lighter">
          <td class="py-4 px-6 border-b border-grey-light"><%= location.name %></td>
          <td class="py-4 px-6 border-b border-grey-light"><%= location.kind %></td>
          <td class="py-4 px-6 border-b border-grey-light">
            <%= link_to "Edit", edit_location_url(location), class: "text-grey-lighter font-bold py-1 px-3 rounded text-xs bg-green hover:bg-green-dark" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
